<div class="container">
  <% if session[:user_id] %>
    <h1>Welcome, <%= @user.username %></h1>
    <form id="new_tweet" method="post" action="/tweets">
      <textarea rows="4" cols="50" name="tweet_content" maxlength="140" placeholder="140 characters or less."></textarea>

      <div class="submit"><input type="submit" value="Tweet"></div>
    </form>
  <% else %>
    <h1 style="text-align:center;">Sign in Already!</h1>
  <% end %>

  <% if session[:username] %>
  <h3>tweets:</h3>
  <% @tweets.each do |tweet| %>
  <div class = "tweet_div"><%= User.find(tweet.user_id).id %><%= User.find(tweet.user_id).username %> <%= tweet.content %><br>Tweeted at: <%= tweet.created_at %><br><form method="post" action="/retweets"><div class="submit"><input type="hidden" name ="user_id" value="<%= User.find(tweet.user_id).id %>"><input type="hidden" name = "content" value="<%= tweet.content %>"><input type="submit" value="Retweet"></div></form><br><br></div>
  <% end %>
  <% end %>

</div>
